# =============================================================================
# Django-GCP Boilerplate - Development Environment (COMMITTED TO GIT)
# =============================================================================
# This file contains safe defaults for local development and is committed to git
# DO NOT put real secrets here!
#
# For your actual credentials, create .env.dev.secrets (gitignored)
# See .env.dev.secrets.example for the template
#
# For production, set these in GCP Secret Manager and Cloud Run environment
# =============================================================================

# =============================================================================
# Environment
# =============================================================================
ENV=dev

# =============================================================================
# Django Settings
# =============================================================================
# Safe default for development - override in .env.dev.secrets for your local environment
SECRET_KEY=dev-insecure-secret-key-override-in-env-secrets
DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Application URLs
# =============================================================================
HOST_URL=http://localhost:8000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_DB=django_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# =============================================================================
# Google Cloud Platform
# =============================================================================
GCP_PROJECT_ID=
GCP_REGION=

# Google Cloud Storage (for static/media files)
USE_GCS=False  # Set to True to use GCS instead of local storage
GCS_BUCKET_NAME=your-gcs-bucket-name

# Google Cloud credentials (for local development only)
# Download service account key JSON from GCP Console
GOOGLE_APPLICATION_CREDENTIALS=./gcp_auth_creds.json

# =============================================================================
# WorkOS Authentication
# =============================================================================
# Get your real API key and Client ID from https://dashboard.workos.com/
# IMPORTANT: Override these in .env.dev.secrets with your actual credentials
WORKOS_API_KEY=
WORKOS_CLIENT_ID=
# Redirect URI for OAuth flow (should match what's configured in WorkOS dashboard)
WORKOS_REDIRECT_URI=http://localhost:8000/auth/callback

# =============================================================================
# Optional: Additional API Keys
# =============================================================================
# IMPORTANT: Override in .env.dev.secrets if you need these
# OPENAI_API_KEY=sk-placeholder-add-to-env-secrets-if-needed

# =============================================================================
# Logging
# =============================================================================
LOG_TO_FILE=False  # Set to True to enable file logging in dev
